<p>
  <b>User:</b>
  <%= @mac.user.name unless @mac.user.blank? %>
</p>

<p>
  <b>MAC:</b>
  <%= @mac.mac %>
</p>

<p>
  <b>Note:</b>
  <%= @mac.note %>
</p>

<p>
  <b>Hidden:</b>
  <%= @mac.hidden %>
</p>

<p>
  <b>IP:</b>
  <%= @mac.ip %>
</p>

<% if can? :read, MacLog %>
<p>
  <b>Recent Log Entries:</b>
<ul>
<% @mac_logs.each do |log| %>
  <li><%= log.created_at %></li>
<% end %>
</ul>
</p>
<% end %>

<%= link_to 'Edit', edit_mac_path(@mac) %> |
<%= link_to 'Back', macs_path %>
