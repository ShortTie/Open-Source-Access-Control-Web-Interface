
<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Active?</b>
  <%= @user.active %>
</p>

<p>
  <b>Admin?</b>
  <%= @user.admin %>
</p>

<b>Certifications:</b>
<ul>
  <% @user.certifications.each do |certification| %>
    <li><%= link_to certification.name, certification %></li>
  <% end %>
  <% if @user.certifications.blank? %><li>n/a</li><% end %>
</ul>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
